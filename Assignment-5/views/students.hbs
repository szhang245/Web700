<div class="row">
    <div class="col-md-12">
        <br>
            <h2>Students</h2>
        <hr />
        <table class="table table-responsive">
            <tr>
                <th>Student Num</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Status</th>
                <th>Course ID</th>
            </tr>
            {{#each students}}
                <tr>
                    <td>{{studentNum}}</td>
                    <td><a href="/student/{{studentNum}}">{{firstName}} {{lastName}}</a></td>
                    <td><a href="mailto:{{email}}">{{email}}</a></td>
                    <td>{{addressStreet}},{{addressCity}},{{addressProvince}}</td>
                    <td>{{status}}</td>
                    <td><a href="/students?course={{course}}">{{course}}</a></td>
                </tr>
            {{/each}}
            {{#unless students}}
                <strong>{{message}}</strong>
            {{/unless}}
        </table>
    </div>
</div>